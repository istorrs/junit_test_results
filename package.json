{
  "name": "junit-test-results-dashboard",
  "version": "2.0.0",
  "description": "JUnit Test Results Dashboard - Frontend",
  "type": "module",
  "scripts": {
    "format": "prettier --write '*.{css,md}'",
    "format:check": "prettier --check '*.{css,md}'",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "client/src/**/*.{ts,tsx,vue}": [
      "bash -c 'cd client && npm run type-check'",
      "bash -c 'cd client && node --experimental-specifier-resolution=node --no-warnings ./node_modules/eslint/bin/eslint.js . --fix'",
      "bash -c 'cd client && prettier --write \"$0\"'"
    ],
    "*.{css,md}": [
      "prettier --write"
    ]
  }
}
